<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="9dp"
        app:contentPadding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: abdullahibnamin@gmail.com"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity: Programming"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/payment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: VALID"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tk: 200"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cardIssuer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method: BKash Mobile Banking"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tran_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transection ID: 5438390d179642bcbeff644783acacb8"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/payment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2022-09-29T19:42:00.582212"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>























